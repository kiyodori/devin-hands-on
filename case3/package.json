{
  "name": "case3-weather-utils",
  "version": "1.0.0",
  "description": "Weather utility functions with Jest testing",
  "main": "src/utils/weather.js",
  "bin": {
    "weather": "./weather.js"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": ["weather", "utilities", "jest", "testing"],
  "author": "Devin AI",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
